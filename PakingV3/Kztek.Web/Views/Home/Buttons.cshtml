@{ 
    int pn = Convert.ToInt32(ViewBag.PN);
}

@if (ViewBag.Action == "Create")
{
    <div class="col-md-offset-4 col-md-8 input-group">
        <button class="btn btn-success" type="submit" id="Countinue">
            <i class="ace-icon fa fa-refresh bigger-110"></i>
            Nhập tiếp
        </button>
        &nbsp; &nbsp; &nbsp;
        <button class="btn btn-info" type="submit">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Thêm mới
        </button>
        &nbsp; &nbsp; &nbsp;
        <button class="btn" type="reset">
            <i class="ace-icon fa fa-undo bigger-110"></i>
            Nhập lại
        </button>
        &nbsp; &nbsp; &nbsp;
        <a href="@Url.Action("Index",ViewBag.Controller)" class="btn btn-yellow">
            <i class="ace-icon fa fa-chevron-circle-left bigger-110"></i>
            Quay lại
        </a>
    </div>
}

@if (ViewBag.Action == "Update")
{
    <div class="col-md-offset-4 col-md-8 input-group">
        <button class="btn btn-info" type="submit">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Lưu
        </button>
        &nbsp; &nbsp; &nbsp;
        <button class="btn" type="reset">
            <i class="ace-icon fa fa-undo bigger-110"></i>
            Nhập lại
        </button>
        &nbsp; &nbsp; &nbsp;
        <a href="@Url.Action("Index",ViewBag.Controller,new { page = pn })" class="btn btn-yellow">
            <i class="ace-icon fa fa-chevron-circle-left bigger-110"></i>
            Quay lại
        </a>
    </div>
}
