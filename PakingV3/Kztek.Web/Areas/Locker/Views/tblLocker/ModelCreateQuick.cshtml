<div id="@string.Format("Modal_{0}", "Locker")" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-md">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                <h4 class="modal-title">
                    Thêm nhanh tủ vào hệ thống
                </h4>
            </div>
            <div class="modal-body">
                <form id="@string.Format("frm_{0}", "Locker")" class="form-horizontal" enctype="multipart/form-data">

                    <div class="form-group">
                        <label class="control-label-left col-xs-12 col-sm-2"> Tiền tố </label>
                        <div class="col-xs-12 col-sm-2">
                            <input type="text" class="form-control" id="txtPrefix" placeholder="Tên" value="Tủ" />
                        </div>
                        <label class="control-label-left col-xs-12 col-sm-3"> Bộ điều khiển: </label>
                        <div class="col-xs-12 col-sm-4">
                            @Html.DropDownList("ControllerID", new SelectList(ViewBag.Controllers, "Id", "ControllerName"), "--Chọn bộ điều khiển--", new { @class = "form-control chosen-select" })
                        </div>
                        
                    </div>

                    <div class="form-group">
                        <label class="control-label-left col-xs-12 col-sm-2"> Số bắt đầu </label>
                        <div class="col-xs-12 col-sm-3">
                            <input type="number" class="form-control" id="txtStartNumber" placeholder="Số bắt đầu" min="1" value="1" />
                        </div>
                        <label class="control-label-left col-xs-12 col-sm-2"> Tối đa </label>
                        <div class="col-xs-12 col-sm-3">
                            <div class="input-group">
                                <input type="number" class="form-control" id="txtMaxNumber" placeholder="Tối đa" min="1" max="32" value="1" />
                                <span class="input-group-addon">
                                    <= 32
                                </span>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-mini" id="btnCloseModalHold" data-dismiss="modal">Thoát</button>
                <button type="button" class="btn btn-info btn-mini" id="btnSaveLocker">Thêm mới</button>
            </div>
        </div>

    </div>
</div>


