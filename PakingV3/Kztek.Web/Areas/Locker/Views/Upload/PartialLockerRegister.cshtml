@model Kztek.Model.CustomModel.iLocker.LockerCard


<div class="modal fade" id="@string.Format("ModalLockerCard_{0}", Model.CardNumber)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
            </div>

            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-3 control-label-left"> Thẻ: </label>
                        <div class="col-xs-3">
                            @Model.CardNumber (@Model.CardNo)
                        </div>
                        <label class="control-label-left col-xs-3"> Khách hàng: </label>
                        <div class="col-xs-3">
                            @Model.CustomerName
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label-left col-xs-3"> Nhóm thẻ: </label>
                        <div class="col-xs-3">
                            @Model.CardGroupName
                        </div>
                        <label class="control-label-left col-xs-3"> Nhóm KH: </label>
                        <div class="col-xs-3">
                            @Model.CustomerGroupName
                        </div>
                    </div>

                    <hr class="hr hr-12"/>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <button type="button" class="btn btn-sm btn-success" id="btnAddNewLocker" idata="@Model.CardNumber">
                                <i class="fa fa-plus"></i>
                                Thêm mới tủ
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            Lưu ý: <strong class="red">Khi xóa đăng ký thẻ với tủ. Vui lòng lấy đồ trước khi thực hiện.</strong>
                        </div>
                    </div>

                    <div class="form-group divOverBoxLocker">
                        <div class="col-xs-12">
                            <table class="table table-bordered" id="tblLockerCard">
                                <tbody>
                                    @foreach (var item in Model.Data)
                                    {
                                        @Html.Action("PartialLockerModel", new { dataObj = Newtonsoft.Json.JsonConvert.SerializeObject(item), cardnumber = Model.CardNumber, taskid = Model.TaskViewId })
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div style="clear:both">

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnCloseLockerDetail" idata="@Model.CardNumber">Đóng</button>
            </div>
        </div>
    </div>
</div>

