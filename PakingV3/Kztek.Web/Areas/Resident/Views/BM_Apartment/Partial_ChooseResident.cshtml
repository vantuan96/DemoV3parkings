@using Kztek.Model.Models
@using Kztek.Model.CustomModel
@using Kztek.Web.Core.Extensions
@model PageModel<BM_ResidentCustom>
@{
    var status = (string)ViewBag.Status;
}
@if (Model != null && Model.Data.Count() > 0)
{

    <div class="col-xs-12">
        <table class="table table-bordered table-hover" id="lpChooseResident" role="grid">
            <colgroup>
                <col style="width: 5%;">
                <col style="">
                <col style="width: 20% ">
                <col style="width: 20% ">
                <col style="width: 10% ">
            </colgroup>
            <thead>
                <tr style="display:none">
                    <th data-field="PersonName" data-sort="asc"><a href="javascript:void(0);">STT  <i class="fa fa-ellipsis-v"></i></a></th>
                    <th style="display:none;">Id</th>
                    <th data-field="PersonName" data-sort="asc"><a href="javascript:void(0);">Name  <i class="fa fa-ellipsis-v"></i></a></th>
                    <th data-field="IDNumber" data-sort="asc"><a href="javascript:void(0);">Name  <i class="fa fa-ellipsis-v"></i></a></th>
                    <th data-field="ContractorId" data-sort="asc"><a href="javascript:void(0);">Name  <i class="fa fa-ellipsis-v"></i></a></th>
                </tr>
            </thead>
            <tbody role="rowgroup">

                @foreach (var item in Model.Data)
                {
                    <tr class="trItem" idata="@item.Id">
                        <td class="center">
                            @item.RowNumber
                        </td>
                        <td style="display:none;">@item.Id</td>
                        <td class="">@item.Name</td>
                        <td class="">@item.Mobile/@item.Email</td>
                        <td class=""></td>
                        <td class="center">
                            
                                <a href="javascript:void(0);" idata="@item.Id" name="btnDeleteChoose" class="red btnDeleteChoose"><i class="ace-icon fa fa-trash bigger-120"></i></a>
                          
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>

    <!--Pagging-->
    <div class="col-xs-12">
        <div id="AjaxPagingChoose">
            @*GeneratePagingFooter*@
            @Html.GeneratePagingFooterAjax(Model.TotalPage, Model.TotalItem, Model.PageIndex, Model.PageSize, "pagination", x => Url.Action("Partial_ChooseResident", "BM_Apartment", new
            {
                page = x,
                key = ViewBag.Key,
            }))
        </div>
    </div>
}










