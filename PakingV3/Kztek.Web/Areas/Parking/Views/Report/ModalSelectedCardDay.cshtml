@using Kztek.Web.Attributes
@model List<string>

@{ 
    var total = (int)ViewBag.totalItemValue;
    var url = (string)ViewBag.urlValue;
}

<div style="display:inline">
    Đã chọn: @Model.Count / @total

    @if (Model.Count > 0)
    {
        <a href="javascript:void(0)" class="red" title="Xóa tất cả bản ghi đã chọn" onclick="RemoveAllSelected('@total', '@url')">
            <i class="fa fa-remove"></i>
        </a>
    }
</div>
<div style="display:inline;margin-left:15px">
    @if (CheckAuthorizeAction.CheckActionPemission("Report", "FreePermission"))
    {
        <button type="button" class="btn btn-purple btn-sm btn-white btn-bold" onclick="FreePermission()">
            <i class="fa fa-money"></i>
            Miễn phí
        </button>
    }

    @if (CheckAuthorizeAction.CheckActionPemission("Report", "PayLater"))
    {
        <button type="button" class="btn btn-info btn-sm btn-white btn-bold" onclick="PayLater()">
            <i class="fa fa-money"></i>
            Trả sau
        </button>
    }

</div>
