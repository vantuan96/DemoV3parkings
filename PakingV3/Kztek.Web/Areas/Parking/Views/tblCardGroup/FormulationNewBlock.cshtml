@{
    int index = Convert.ToInt32(ViewBag.Index);
}

<div class="form-group">
    <label class="col-sm-4 control-label no-padding-right"> Block @index (VNĐ) </label>
    <div class="col-sm-2">
        <input type="text" name="nbBlock" value="0" class="form-control formatMoney" />
    </div>
    <label class="col-sm-2 control-label no-padding-right"> Thời gian (Phút) </label>
    <div class="col-sm-2">
        <input type="text" name="nbTime" value="0" class="form-control" />
    </div>
</div>