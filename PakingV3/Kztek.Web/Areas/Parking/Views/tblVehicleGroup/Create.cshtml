@model Kztek.Model.Models.tblVehicleGroup

@{
    ViewBag.Title = "Create";
    //Layout = Kztek.Web.Core.Functions.FunctionHelper.GetLayoutByGroup(ViewBag.Group);
}

<div class="page-header">
    <h1>
        Thêm mới nhóm xe
    </h1>
</div>
<div class="row">
    @if (TempData["Success"] != null)
    {
        <strong style="color:green">@TempData["Success"]</strong>
    }
    <strong style="color:red">@ViewBag.Error</strong>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "tblVehicleGroup", FormMethod.Post, new { encType = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.Hidden("SaveAndCountinue", false)
            @Html.Hidden("key", (string)ViewBag.keyValue)
            @Html.Hidden("group", (string)ViewBag.groupValue)

            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Tên nhóm xe </label>
                <div class="col-sm-4 col-xs-12">
                    @Html.TextBoxFor(n => n.VehicleGroupName, new { @class = "form-control", @placeholder = "Nhập tên nhóm xe" })
                    @Html.ValidationMessageFor(n => n.VehicleGroupName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Loại xe </label>
                <div class="col-sm-4 col-xs-12">
                    @Html.DropDownListFor(n => n.VehicleType, new SelectList(ViewBag.VehicleTypes, "ItemValue", "ItemText", (string)ViewBag.VehicleTypeValue), new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.VehicleType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Giới hạn </label>
                <div class="col-sm-4 col-xs-12">
                    @Html.TextBoxFor(n => n.LimitNumber, new { @class = "form-control", @placeholder = "Số lượng giới hạn" })
                    @Html.ValidationMessageFor(n => n.LimitNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> STT </label>
                <div class="col-sm-2 col-xs-12">
                    @Html.TextBoxFor(n => n.SortOrder, new { @class = "form-control", @placeholder = "STT" })
                    @Html.ValidationMessageFor(n => n.SortOrder, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Ngừng sử dụng </label>
                <div class="col-sm-8">
                    <label class="line-height-250">
                        @Html.CheckBoxFor(n => n.Inactive, new { @class = "ace" })
                        <span class="lbl"></span>
                    </label>
                </div>
            </div>

            <div class="ace-settings-container" id="ace-settings-container" style="position: fixed; top: 155px;">
                <div class="btn btn-app btn-xs btn-grey ace-settings-btn open" id="ace-settings-btn">
                    <i class="ace-icon fa fa-cog bigger-130"></i>
                </div>

                <div class="ace-settings-box clearfix open" id="ace-settings-box">
                    <!-- /.pull-left -->
                    <div class="bg-rightbox">
                        <div class="clearfix lineButton">
                            <div class="col-md-12 input-group">
                                <button class="btn btn-success" type="submit" id="Countinue">
                                    <i class="ace-icon fa fa-refresh bigger-110"></i>
                                    Lưu
                                </button>
                                <button class="btn btn-info" type="submit" id="BackToList">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Lưu và thoát
                                </button>
                                <button class="btn" type="reset">
                                    <i class="ace-icon fa fa-undo bigger-110"></i>
                                    Nhập lại
                                </button>
                                <a href="@Url.Action("Index", new { group = ViewBag.groupValue, key = ViewBag.keyValue })" class="btn btn-yellow">
                                    <i class="ace-icon fa fa-chevron-circle-left bigger-110"></i>
                                    Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.pull-left -->
                </div><!-- /.ace-settings-box -->
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#Countinue").click(function () {
                $("#SaveAndCountinue").val('true');
            });

            $("#BackToList").click(function () {
                $("#SaveAndCountinue").val('false');
            });
        });
    </script>
}