<style>
    .loading1 {
        display: none;
    }
</style>

<div id="modalImportCard" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="boxTitle">Nhập file danh sách thẻ vào hệ thống</h4>
            </div>
            <form role="form" id="frmImportCard">
                <div class="modal-body">
                    <div class="form-group">
                        <a href="@Url.Action("DownloadFile", "tblCard", new { Area = "Parking" })">
                            Tải xuống file mẫu
                            <i class="fa fa-download"></i>
                        </a>
                    </div>
                    <div class="form-group">
                        <input type="file" name="FileUpload" id="FileUpload" value="" />
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                <button type="button" class="btn btn-primary" id="btnSave" onclick="saveNewFileCard()">Lưu</button>
            </div>
            <div class="loading1">
                <img src="~/Content/Image/ajax-loader.gif" />
                <span id="proccess" style="display:none">Đang chuyển đổi.....</span>
                <span id="messs" style="display:none">Dừng chuyển đổi.....</span>
            </div>
        </div>
    </div>
</div>



